generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../sqlite.db"
}

model UserConv {
  id           Int     @id @default(autoincrement())
  userId       String @unique
  conversionId String?

  @@index([userId], map: "idx_UserConv")
}

model User {
    id           Int     @id @default(autoincrement())
    name        String? 
    email       String @unique

    @@index([email])
}

model Project {
    id          Int     @id @default(autoincrement())
    userId      Int
    name        String 
    serviceId   Int
    status      String
    uuid        String

    @@index([userId,uuid,serviceId])
    @@index([userId])
    @@index([serviceId])

}

model Service {
    id          Int     @id @default(autoincrement())
    userId      Int
    projectId   Int
    name        String 
    @@index([projectId,userId])
}